<Window x:Class="Library.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Icon="Images/Logo/logo-small.png"
        WindowStartupLocation="CenterScreen"
        Title="Library" Height="480" Width="640"
        x:Name="root">

    <Window.Resources>

        <DataTemplate DataType="{x:Type local:LoginViewModel}">
            <local:LoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:RegisterViewModel}">
            <local:RegisterView/>
        </DataTemplate>

    </Window.Resources>

    <DockPanel LastChildFill="True">

        <!--Navigation menu on the top-->
        <Grid x:Name="navigation" DockPanel.Dock="Top">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock
                    Text="BIBLIOTEKA online"
                    Padding="15"
                    FontFamily="{StaticResource LatoBold}"
                    Foreground="{StaticResource BurgundyBrush}"
                    FontSize="{StaticResource FontSizeRegular}"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Button
                    Command="{Binding LoginCommand}"
                    Margin="10"
                    Padding="10"
                    Content="Logowanie">
                </Button>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <Button
                    Command="{Binding RegisterCommand}"
                    Margin="10"
                    Padding="10"
                    Content="Rejestracja">
                </Button>
            </StackPanel>

        </Grid>

        <!--Application content-->
        <ContentControl x:Name="Pages" DockPanel.Dock="Bottom"  Content="{Binding SelectedViewModel}"/>

    </DockPanel>

</Window>
