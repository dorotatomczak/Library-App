<UserControl x:Class="Library.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library"
             mc:Ignorable="d" 
             x:Name="This"
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel Background="{StaticResource BackgroundLightBrush}">
        <TextBlock
            Margin="10 20 0 0"
            Text="Książki, które możesz zarezerwować"
            FontFamily="{StaticResource LatoRegular}"
            FontSize="{StaticResource FontSizeRegular}"
            Foreground="{StaticResource BurgundyBrush}"/>

        <Grid>
            <Border
            Margin="10 20 10 0"
            Background="White"
            MaxHeight="300"
            CornerRadius="10">
                <ScrollViewer>
                    <ListBox
                     ItemsSource="{Binding Books}"
                     SelectedItem="{Binding Path=SelectedBook, Mode=TwoWay}"
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.Template>
                    <ControlTemplate>
                        <DockPanel LastChildFill="True">
                            <Grid DockPanel.Dock="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Column="0"
                                    FontFamily="{StaticResource LatoRegular}"
                                    FontSize="{StaticResource FontSizeSmall}"
                                    Foreground="{StaticResource BurgundyBrush}"
                                    >Tytuł</Label>
                                <Label 
                                    Grid.Column="1"
                                    FontFamily="{StaticResource LatoRegular}"
                                    FontSize="{StaticResource FontSizeSmall}"
                                    Foreground="{StaticResource BurgundyBrush}"
                                    >Autor</Label>
                                <Label 
                                    Grid.Column="2"
                                    FontFamily="{StaticResource LatoRegular}"
                                    FontSize="{StaticResource FontSizeSmall}"
                                    Foreground="{StaticResource BurgundyBrush}"
                                    >Gatunek</Label>
                                <Label 
                                    Grid.Column="3"
                                    FontFamily="{StaticResource LatoRegular}"
                                    FontSize="{StaticResource FontSizeSmall}"
                                    Foreground="{StaticResource BurgundyBrush}"
                                    >Ilość stron</Label>
                            </Grid>
                            <ItemsPresenter></ItemsPresenter>
                        </DockPanel>
                    </ControlTemplate>
                </ListBox.Template>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="0.5*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Title}"/>
                            <TextBlock Text="{Binding Author}" Grid.Column="1"/>
                            <TextBlock Text="{Binding Genre}" Grid.Column="2"/>
                            <TextBlock Text="{Binding Pages}" Grid.Column="3"/>

                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
                </ScrollViewer>
            </Border>
        </Grid>

        <Button
            CommandParameter="{Binding ElementName=This}"
            Command="{Binding ReserveCommand}"
            MaxWidth="120"
            Content="Zarezerwuj"
            Padding="10"/>
    </StackPanel>
    
</UserControl>
