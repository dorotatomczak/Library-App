<UserControl x:Class="Library.RankingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library"
             mc:Ignorable="d"
             x:Name="This"
             d:DesignHeight="600" d:DesignWidth="300">
    <StackPanel Background="{StaticResource BackgroundLightBrush}">
        <TextBlock
            Margin="20 15 0 0"
            Text="Najaktywniejsi czytelnicy"
            FontFamily="{StaticResource LatoRegular}"
            FontSize="{StaticResource FontSizeRegular}"
            Foreground="{StaticResource BurgundyBrush}"
            />

        <Grid>
            <Border
            Margin="10 20 10 0"
            Background="White"
            MaxHeight="300"
            CornerRadius="10">
                <ListBox
                     ItemsSource="{Binding Readers}"
                     HorizontalContentAlignment="Stretch">
                    <ListBox.Template>
                        <ControlTemplate>
                            <DockPanel LastChildFill="True">
                                <Grid DockPanel.Dock="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label
                                    Grid.Column="0"
                                    FontFamily="{StaticResource LatoRegular}"
                                    FontSize="{StaticResource FontSizeSmall}"
                                    Foreground="{StaticResource BurgundyBrush}"
                                    >Czytelnik</Label>
                                    <Label 
                                    Grid.Column="1"
                                    FontFamily="{StaticResource LatoRegular}"
                                    FontSize="{StaticResource FontSizeSmall}"
                                    Foreground="{StaticResource BurgundyBrush}"
                                    >Ilość</Label>

                                </Grid>
                                <ItemsPresenter></ItemsPresenter>
                            </DockPanel>
                        </ControlTemplate>
                    </ListBox.Template>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Login}"/>
                                <TextBlock Text="{Binding ReadBooksAmount}" Grid.Column="1"/>

                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>
        <TextBlock
            Margin="20 15 0 0"
            Text="Najpopularniejsze książki"
            FontFamily="{StaticResource LatoRegular}"
            FontSize="{StaticResource FontSizeRegular}"
            Foreground="{StaticResource BurgundyBrush}"
            />

        <Grid>
            <Border
            Margin="10 20 10 0"
            Background="White"
            MaxHeight="300"
            CornerRadius="10">
                <ListBox
                     ItemsSource="{Binding Books}"
                     HorizontalContentAlignment="Stretch">
                    <ListBox.Template>
                        <ControlTemplate>
                            <DockPanel LastChildFill="True">
                                <Grid DockPanel.Dock="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label
                                    Grid.Column="0"
                                    FontFamily="{StaticResource LatoRegular}"
                                    FontSize="{StaticResource FontSizeSmall}"
                                    Foreground="{StaticResource BurgundyBrush}"
                                    >Tytuł</Label>
                                    <Label 
                                    Grid.Column="1"
                                    FontFamily="{StaticResource LatoRegular}"
                                    FontSize="{StaticResource FontSizeSmall}"
                                    Foreground="{StaticResource BurgundyBrush}"
                                    >Ilość</Label>

                                </Grid>
                                <ItemsPresenter></ItemsPresenter>
                            </DockPanel>
                        </ControlTemplate>
                    </ListBox.Template>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Title}"/>
                                <TextBlock Text="{Binding AmountofBorrowings}" Grid.Column="1"/>

                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>
    </StackPanel>
</UserControl>
