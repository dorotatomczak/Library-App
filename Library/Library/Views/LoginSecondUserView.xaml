<UserControl x:Class="Library.LoginSecondUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library"
             mc:Ignorable="d" 
             x:Name="This"
             d:DesignHeight="300"  d:DesignWidth="400">
    <Grid Background="{StaticResource BackgroundLightBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextBlock.TextAlignment="Center">

                <Border
                    Background="White"
                    CornerRadius="10"
                    Padding="25 40 25 25"
                    Margin="0 40 0 0"
                    Width="350"
                    Height="auto">

                    <!--Login form-->
                    <StackPanel>
                        <TextBlock 
                            Text="Logowanie drugiego gracza" TextWrapping="Wrap"
                            FontSize="{StaticResource FontSizeLarge}"
                            FontFamily="{StaticResource LatoBold}"
                            Foreground="{StaticResource BurgundyBrush}"/>

                        <Label 
                            Content="Login"
                            x:Name="Login"
                            FontFamily="{StaticResource LatoRegular}"
                            FontSize="{StaticResource FontSizeSmall}"
                            Margin="0 10 0 0"/>
                        <TextBox
                            x:Name="txtLogin"
                            Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Padding="2"/>

                        <Label 
                            Content="Hasło"
                            x:Name="UserPassword"
                            FontFamily="{StaticResource LatoRegular}"
                            FontSize="{StaticResource FontSizeSmall}"
                            Margin="0 10 0 0"/>
                        <PasswordBox x:Name="txtPassword" Padding="2" />

                        <Button
                            Name="Submit"
                            CommandParameter="{Binding ElementName=This}"
                            Command="{Binding SubmitCommand}"
                            Content="Zaloguj się"
                            HorizontalAlignment="Center"
                            Margin="0 20 0 0"/>

                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
