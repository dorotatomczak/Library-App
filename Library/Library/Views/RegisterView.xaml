<UserControl x:Class="Library.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library"
             mc:Ignorable="d"
             x:Name="This"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{StaticResource BackgroundLightBrush}">
        <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextBlock.TextAlignment="Center">

            <Border
                    Background="White"
                    CornerRadius="10"
                    Padding="25 40 25 25"
                    Margin="0 40 0 0"
                    Width="260"
                    Height="auto">


                <!--Register form-->
                <StackPanel>
                    <TextBlock
                            Text="Rejestracja"
                            FontSize="{StaticResource FontSizeLarge}"
                            FontFamily="{StaticResource LatoBold}"
                            Foreground="{StaticResource BurgundyBrush}"/>

                    <Label 
                            Content="Login"
                            FontFamily="{StaticResource LatoRegular}"
                            FontSize="{StaticResource FontSizeSmall}"
                            Margin="0 10 0 0"/>
                    <TextBox
                            x:Name="Login"
                            Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Padding="2"/>

                    <Label 
                            Content="E-mail"
                            FontFamily="{StaticResource LatoRegular}"
                            FontSize="{StaticResource FontSizeSmall}"
                            Margin="0 10 0 0"/>
                    <TextBox
                            x:Name="Email"
                            Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Padding="2"/>

                    <Label 
                            Content="Hasło"
                            FontFamily="{StaticResource LatoRegular}"
                            FontSize="{StaticResource FontSizeSmall}"
                            Margin="0 10 0 0"/>
                    <PasswordBox x:Name="txtPassword" Padding="2"/>

                    <Button
                            x:Name="Submit"
                            CommandParameter="{Binding ElementName=This}"
                            Command="{Binding SubmitCommand}"
                            Content="Zarejestruj się"
                            HorizontalAlignment="Center"
                            Margin="0 20 0 0"/>

                </StackPanel>
            </Border>

            <Button
                    Command="{Binding DataContext.LoginCommand, 
                        RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}}"
                    Style="{StaticResource TextButton}"
                    Content="Posiadasz już konto? Zaloguj się."
                    HorizontalAlignment="Center" />

        </StackPanel>
    </Grid>
</UserControl>
